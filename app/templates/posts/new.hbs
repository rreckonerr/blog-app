<h2>Add a new Post</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input type="text" value=model.title class="form-control" placeholder="The title of the Post"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      {{input type="text" value=model.description class="form-control" placeholder="The description of the Post"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Image</label>
    <div class="col-sm-10">
      {{input type="text" value=model.urlToImage class="form-control" placeholder="The image of the Post"}}
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Published</label>
    <div class="col-sm-10">
      {{input type="text" value=model.publishedAt class="form-control" placeholder="The publication date of the Post"}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'savePost' model}}>Add Post</button>
    </div>
  </div>
</div>